@{
    ViewBag.Title = "Auction Bidding Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <div class="row">
                <div class="col-lg-12">
                    <div class="btn-group btn-breadcrumb">
                        <a class="btn btn-primary" href="~/Admin/Index" onclick="Loader()"><i class="fa fa-tachometer"></i>Dashboard</a>
                        <a class="btn btn-primary-child" href="#" style="pointer-events: none"><i class="fa fa-file-text"></i> Auction Bidding Detail</a>
                        <a class="btn btn-primary" href="#" style="display: none"></a>
                    </div>
                </div>
            </div>
        </h1>
    </div>
</div>
@foreach (var item in Model) {
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-9">
            <label>Auction Adress : @item.Address</label>
        </div>
        <div class="col-lg-3">
            <label>Estimated Rate : @item.EstimatedRate</label>
        </div>
    </div>
    <div class="row" style="margin-top: 10px;border-top: 1px solid #aaa;">
        <div class="col-lg-12"  style="padding-top: 10px;">
            <label>Detail : @item.Detail</label>
        </div>
    </div>
    <div class="row" style="margin-top: 10px; border-top: 1px solid #aaa;">
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Date From : @item.DateFrom</label>
        </div>
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Time From : @item.TimeFrom</label>
        </div>
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Date To : @item.DateTo</label>
        </div>
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Time To : @item.TimeTo</label>
        </div>
    </div>
    <div class="row" style="margin-top: 10px; border-top: 1px solid #aaa;">
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Status : @item.Status</label>
        </div>
        <div class="col-lg-6" style="padding-top: 10px;">
            <label>Assign To : @item.Name</label>
        </div>
        <div class="col-lg-3" style="padding-top: 10px;">
            <label>Contact No: @item.ContactNo</label>
        </div>
    </div>
    break;
}
<table id="example" cellspacing="0" class="table table-striped table-bordered" style="margin-top: 20px;" width="100%">
    <thead>
        <tr style="background: linear-gradient(to right, #7fc645 0%,#048ed2 100%) !important; color: #fff; text-align: center">
            <th>S.No</th>
            <th>Bidding By</th>
            <th>Bidding Amount</th>
            <th>Contact No</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @{ int i=1;
          foreach (var item in Model) {
            <tr>
                <td>@i</td>
                <td>@item.CompanyName</td>
                <td>@item.BidingAmount</td>
                <td>@item.BiddingContactNo</td>
                <td>@item.BiddingCreatedDate</td>
            </tr>
              i = i + 1;
      }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>