                $('#PasswordLogin').css("border", "2px solid red");
                $("#divLoading").hide();
                error = error + 1;
            }

            if (error != 0) {
                //$("#divLoading").hide();
                return false;


            }
            else {


                $("#divLoading").show();
                return true;

            }
        });

        //end
        //for email chechk
        function IsEmail(mail) {
