@{
    ViewBag.Title = "Request Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <div class="row">
        <div class="col-lg-12">
            <div class="btn-group btn-breadcrumb">
                <a href="~/Admin/Index" class="btn btn-primary" onclick="Loader()"><i class="fa fa-tachometer"></i> Dashboard</a>
                <a href="#" class="btn btn-primary-child" style="pointer-events:none"><i class="fa fa-file-text"></i> Request Detail</a>
                <a href="#" class="btn btn-primary" style="display:none"></a>
            </div>
        </div>
    </div>
        </h1>
    </div>
</div>
@foreach (var item in Model) {
<div class="row" style="margin-top:10px;">
    <div class="col-lg-4"><label>Request By : @item.Name</label> 
    </div><div class="col-lg-4"><label>Contact No : @item.ContactNo</label> </div>
    <div class="col-lg-4"><label>Assign To : @item.EmployeeName</label> </div>
</div>
<div class="row" style="margin-top:10px;border-top:1px solid #aaa;">
    <div class="col-lg-4" style="padding-top: 10px;"><label>Garbage Type : @item.GarbageType</label> </div>
    <div class="col-lg-8" style="padding-top: 10px;"><label>Address : @item.Address</label></div>
</div>
<div class="row" style="margin-top:10px;border-top:1px solid #aaa;">
    <div class="col-lg-4" style="padding-top: 10px;"><label>Total Amount : @item.TotalAmount</label> 
    </div><div class="col-lg-4" style="padding-top: 10px;"><label>Main Request Status : @item.RequestStatus</label> </div>
    <div class="col-lg-4" style="padding-top: 10px;"><label>Created On : @item.CreatedDate</label> </div>
</div>
    break;
}
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%" style="margin-top:20px;">
  <thead>
    <tr style="background:linear-gradient(to right, #7fc645 0%,#048ed2 100%) !important;color:#fff;text-align:center">
      <th>S.No</th>
        <th>Schedule Date</th>
      <th>Schedule Time</th>
        <th>Sub Request Status</th>
    </tr>
  </thead>
  <tbody>
      @{ int i=1;
          foreach (var item in Model) {
    <tr>  
       <td>@i</td>
      <td>@item.Date</td>
       <td>@item.Time</td>
        <td>@item.RequestDetailStatus</td>
    </tr>
              i = i + 1;
      }
      }
  </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>