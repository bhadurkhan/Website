@{
    ViewBag.Title = "All Request";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <div class="row">
        <div class="col-lg-12">
            <div class="btn-group btn-breadcrumb">
                <a href="~/Admin/Index" class="btn btn-primary" onclick="Loader()"><i class="fa fa-tachometer"></i> Dashboard</a>
                <a href="#" class="btn btn-primary-child" style="pointer-events:none"><i class="fa fa-file"></i> All Request</a>
                <a href="#" class="btn btn-primary" style="display:none"></a>
            </div>
        </div>
    </div>
        </h1>
    </div>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr style="background:linear-gradient(to right, #7fc645 0%,#048ed2 100%) !important;color:#fff;text-align:center">
      <th>Request By</th>
      <th>Contact</th>
      <th>Addres</th>
        <th>Type</th>
        <th>Total Amount</th>
      <th>Status</th>
      <th>Created On</th>
        <th>Assign To</th>
        <th style="text-align:center">Action</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model) {
    <tr>  
      <td>@item.Name</td>
       <td>@item.ContactNo</td>
        <td>@item.Address</td>
        <td>@item.GarbageType</td>
        <td>@item.TotalAmount</td>
       <td>@item.RequestStatus</td>
       <td>@item.CreatedDate</td>
        <td>@item.EmployeeName</td>
       <td>
           <a class="btnedit" href="~/Admin/ListOfRequestDetailForAdmin?RequestId=@item.RequestId" style="text-decoration:none;padding:4px 10px;" ><i class="fa fa-file-text"> </i> Detail</a>
        </td>
    </tr>
      }
  </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>